{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src"
    ]
}