{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ]
}